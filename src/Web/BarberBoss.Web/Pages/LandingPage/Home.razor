@page "/"

@using BarberBoss.Web.Pages.LandingPage.Components
@using Microsoft.AspNetCore.Authorization

@layout EmptyLayout

<PageTitle>Home - Barber Boss</PageTitle>

<HomeHeader />

<main>
    <section id="home" class="bg-[#1a1a1a] py-20 text-center">
        <div class="container mx-auto px-4">
            <h2 class="mb-4 text-4xl font-bold text-neutral-50">Bem vindo(a) ao maior gerenciador de barbearias do Brasil</h2>
            <p class="mb-8 text-xl text-neutral-50">Guarde seu tempo para o que realmente importa. Fature muito mais!</p>
            <a href="#home" class="bg-[#3b82f6] rounded-full px-8 py-4 text-white transition-colors hover:bg-[#2563eb]">Teste gratuitamente</a>
        </div>
    </section>

    <section id="servicos" class="bg-[#252525] py-16">
        <div class="container mx-auto px-4">
            <h2 class="mb-8 text-center text-3xl font-bold">Nossos Serviços</h2>
            <div class="grid-cols-1 grid gap-8 md:grid-cols-3">
                <div class="bg-[#1a1a1a] rounded-lg p-6">
                    <h3 class="mb-4 text-xl font-semibold">Agendamento de horários</h3>
                    <p class="mb-4">Tenha controle dos horários da barbearia com um clique</p>                    
                </div>
                <div class="bg-[#1a1a1a] rounded-lg p-6">
                    <h3 class="mb-4 text-xl font-semibold">Pagamento antecipado do serviço</h3>
                    <p class="mb-4">Você pode dar desconto para o cliente em caso de pagamento antecipado</p>                    
                </div>
                <div class="bg-[#1a1a1a] rounded-lg p-6">
                    <h3 class="mb-4 text-xl font-semibold">Clube de fidelidade</h3>
                    <p class="mb-4">Crie condições para fidelização do seu cliente</p>                    
                </div>
            </div>
        </div>
    </section>
</main>

<HomeFooter />